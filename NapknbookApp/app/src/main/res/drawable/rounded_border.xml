<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />  <!-- Change color as needed -->

    <!-- Background color -->
    <solid android:color="@android:color/transparent" /> <!-- Or any color -->

    <!-- Rounded corners -->
    <corners android:radius="32dp" />  <!-- Adjust as needed -->

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
