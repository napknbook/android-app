<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <!-- ðŸ“· Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- ðŸ”˜ Capture Button -->
    <ImageButton
        android:id="@+id/btnCapture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_circle"
        android:padding="16dp"
        android:contentDescription="Capture" />

    <!-- ðŸ–¼ï¸ Image Preview Overlay (Hidden by default) -->
    <FrameLayout
        android:id="@+id/previewOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#CC000000">

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false" />

        <!-- âŒ Close Button (top-left corner) -->
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/close_64dp_white"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:contentDescription="Close"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp" />

        <!-- âœ… Done Button (bottom-right corner) -->
        <Button
            android:id="@+id/btnConfirmSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@android:color/black"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:contentDescription="Confirm photo" />
    </FrameLayout>

</FrameLayout>
