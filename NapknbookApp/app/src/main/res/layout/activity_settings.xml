<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/Theme.Napknbook"
    tools:context=".SettingsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="âš™ï¸ Settings" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:theme="@style/Theme.Napknbook"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <!-- Account Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Account Settings"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/profileTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ‘¤ Profile" />

                <TextView
                    android:id="@+id/privacyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ” Privacy" />

                <TextView
                    android:id="@+id/securityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ›¡ Security" />
                <TextView
                    android:id="@+id/cancelSubscriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="âŒ Cancel Subscription" />


                <TextView
                    android:id="@+id/loginTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="Login" />
                <TextView
                    android:id="@+id/logoutTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="Logout" />
            </LinearLayout>

            <!-- Neural Engine Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Neural Engine"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@android:color/darker_gray" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                android:visibility="gone"

                app:justifyContent="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/selected_border"

                    app:srcCompat="@drawable/openai_logo" />


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/inventory_border"
                    app:srcCompat="@drawable/grok_logo" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/inventory_border"

                    app:srcCompat="@drawable/gemini_logo" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/inventory_border"

                    app:srcCompat="@drawable/ic_add" />



            </com.google.android.flexbox.FlexboxLayout>





            <!-- Badges Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Badges"
                android:visibility="gone"

                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"

                android:background="@android:color/darker_gray" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignItems="center"
                android:visibility="gone"

                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/selected_border"

                    app:srcCompat="@drawable/logo" />


                <ImageView
                    android:id="@+id/earlyAdopterBadgeImageView"
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/inventory_border"/>


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:src="@drawable/verified_badge_0"
                    android:background="@drawable/inventory_border"/>


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:src="@drawable/verified_badge_1"
                    android:background="@drawable/inventory_border"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="85dp"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:background="@drawable/inventory_border"

                    app:srcCompat="@drawable/ic_add" />



            </com.google.android.flexbox.FlexboxLayout>

            <!-- Support Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Support"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/helpTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="â“ Help Center" />

                <TextView
                    android:id="@+id/contactTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ“ž Contact Us" />

                <TextView
                    android:id="@+id/reportTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ’¬ Report a Problem" />
            </LinearLayout>

            <!-- General Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="General"

                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/aboutTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ§¾ About" />

                <TextView
                    android:id="@+id/termsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="ðŸ§¾ Terms of Service"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/privacyPolicyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="ðŸ§¾ Privacy Policy" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>